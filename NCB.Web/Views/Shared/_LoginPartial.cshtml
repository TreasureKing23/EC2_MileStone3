﻿

@using Microsoft.AspNetCore.Identity
@using NCB.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Profile" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link " id="register" asp-controller="Profile" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " id="login" asp-controller="Profile" asp-action="Login">Login</a>
        </li>

    }



</ul>