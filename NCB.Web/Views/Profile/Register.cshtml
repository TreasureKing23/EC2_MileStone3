@model UserDTO

@{
    ViewData["Title"] = "Register User";
}

﻿
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-6">
        <form id="registerForm" method="post" enctype="multipart/form-data">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="card">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating mb-1">
                    <input asp-for="Name" class="form-control" aria-required="true" />
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-1">
                    <input asp-for="UserName" class="form-control" aria-required="true" />
                    <label asp-for="UserName"></label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-1">
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-1">
                    <input asp-for="Address" class="form-control" aria-required="true" />
                    <label asp-for="Address"></label>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-floating mb-1">
                    <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-1">
                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="ConfirmPassword"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <button id="registerSubmit" asp-action="Register" type="submit" class="btn btn-primary">Register</button>
            </div>

        </form>
    </div>
</div>
