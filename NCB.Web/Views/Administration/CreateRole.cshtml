@model RoleDTO

@{
    ViewData["Title"] = "Create Role";
}

<h1>Create Role</h1>
<hr />
<div class="row">
    <div class="col-mid-4">
        <form enctype="multipart/form-data" asp-action="CreateRole">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mt-2 btn-group">
                <input type="submit" asp-action="CreateRole" class="btn btn-primary" />
                <a class="btn btn-info" type="submit" asp-action="ListRoles">Back to List</a>
            </div>
        </form>
    </div>
</div>