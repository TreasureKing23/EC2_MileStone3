@model CurrencyDTO
@{
    ViewData["Title"] = "Edit Currency";
}

<h1 class="mt-3">Edit Currency</h1>

<div class="container-fluid">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div> 
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ShortName" class="control-label"></label> 
            <input asp-for="ShortName" class="form-control" />
            <span asp-validation-for="ShortName" class="text-danger"></span>
        </div>
        <div class="form-group mt-2 btn-group">
            <input type="submit" value="Update Currency" asp-action="Edit" class="btn btn-primary" />
            <a class="btn btn-info" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>