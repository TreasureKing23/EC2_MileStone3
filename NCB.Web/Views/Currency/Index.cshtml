@model IEnumerable<CurrencyDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Manage Currency</h1>

<p>
    <a class="btn btn-success" asp-action="create">Create New Currency</a>
</p>
<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Short Name
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="vertical-align:middle">
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortName)
                </td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i> Edit</a>
                        <a class="btn btn-danger" data-bs-toggle="modal" data-bs-item="@item" data-bs-target="#deleteModal-@item.Id"><i></i>Delete</a>
                    </div>
                </td>
            </tr>

            <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel-@item.Id" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel-@item.Id">Delete Currency</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this role?
                            <br /><strong>
                                @Html.DisplayFor(modelItem => item.Name)
                            </strong>
                        </div>
                        <div class="modal-footer">
                            <form method="post" asp-controller="Currency" asp-action="Delete" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-outline-danger">Delete User</button>
                            </form>
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>

                        </div>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>
